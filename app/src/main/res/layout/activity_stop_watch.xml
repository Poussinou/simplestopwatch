<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".StopWatch">

    <omegacentauri.mobi.simplestopwatch.ShortTextView
        android:id="@+id/chrono1"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:gravity="center"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:padding="0sp"
/>

    <omegacentauri.mobi.simplestopwatch.ShortTextView
        android:id="@+id/chrono2"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="0sp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="50sp"
/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/start"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/oval"
            android:textColor="@android:color/white"
            android:layout_marginRight="8dp"
            android:onClick="onButtonStart"
            android:text="Start" />

            <Button
                android:id="@+id/reset"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/oval"
                android:textColor="@android:color/white"
                android:layout_marginRight="8dp"
                android:text="Reset"
                android:onClick="onButtonReset" />
        <ImageButton
            android:id="@+id/settings"
            android:onClick="onButtonSettings"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/settings" />

        <TextView
            android:id="@+id/fraction"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text=".0"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

    </LinearLayout>

</LinearLayout>